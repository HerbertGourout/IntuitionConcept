# Configuration Firebase
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Stack IA Premium - Clés API
VITE_GROK_API_KEY=your_grok_api_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Services
VITE_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
VITE_GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id

# Configuration IA Premium
VITE_AI_COST_OPTIMIZATION=true
VITE_AI_QUALITY_THRESHOLD=80
VITE_AI_FALLBACK_ENABLED=true
VITE_MARKET_INTELLIGENCE_REFRESH=3600000

# Utiliser les émulateurs Firebase en local (auth/firestore/storage)
# Créez un fichier .env.local et mettez cette variable à true pour activer le mode emulateur
VITE_USE_FIREBASE_EMULATORS=false

# Variables d'environnement pour l'application
VITE_APP_NAME=IntuitionConcept
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Configuration API (si nécessaire)
VITE_API_BASE_URL=https://api.example.com

# Configuration Email Service
# Choisir un seul provider : sendgrid, mailgun, ou resend
VITE_EMAIL_PROVIDER=sendgrid

# OpenAI Configuration (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Hybrid AI System - New Providers
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_key_here

# AI Provider Configuration
AI_PRIMARY_PROVIDER=groq
AI_FALLBACK_ENABLED=true
AI_COST_TRACKING_ENABLED=true
VITE_SENDGRID_FROM_EMAIL=noreply@votredomaine.com
VITE_SENDGRID_FROM_NAME=BTP Manager

# SendGrid Configuration
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun Configuration (alternative)
VITE_MAILGUN_API_KEY=your_mailgun_api_key_here
VITE_MAILGUN_DOMAIN=mg.votredomaine.com
VITE_MAILGUN_FROM_EMAIL=noreply@votredomaine.com

# Resend Configuration (alternative)
VITE_RESEND_API_KEY=your_resend_api_key_here
VITE_RESEND_FROM_EMAIL=noreply@votredomaine.com

